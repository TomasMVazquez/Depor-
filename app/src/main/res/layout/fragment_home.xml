<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screens.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor"
        android:paddingTop="?actionBarSize"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:addStatesFromChildren="true"
                >

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sport_item"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:backgroundTint="@color/secondaryColor"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="150dp"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    >

                    <ImageView
                        android:id="@+id/sport_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        app:tint="@color/secondaryTextColor"
                        android:src="@drawable/ic_running"
                        />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/sport_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:gravity="top|center"
                    android:layout_gravity="bottom"
                    android:textColor="@color/secondaryColor"
                    android:lines="2"
                    android:text="Running"
                    android:clickable="true"
                    android:focusable="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="4dp"
                >

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sport_item2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:backgroundTint="@color/secondaryColor"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="25dp"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:addStatesFromChildren="true"
                    >

                    <ImageView
                        android:id="@+id/sport_img2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        app:tint="@color/secondaryTextColor"
                        android:src="@drawable/ic_tennis"
                        android:clickable="true"
                        android:focusable="true"
                        />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/sport_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:gravity="top|center"
                    android:layout_gravity="bottom"
                    android:textColor="@color/secondaryColor"
                    android:lines="2"
                    android:text="Tennis"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="4dp"
                >

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sport_item3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:backgroundTint="@color/secondaryColor"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="150dp"
                    android:layout_margin="8dp"
                    >

                    <ImageView
                        android:id="@+id/sport_img3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        app:tint="@color/secondaryTextColor"
                        android:src="@drawable/ic_basket"
                        />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/sport_title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:gravity="top|center"
                    android:layout_gravity="bottom"
                    android:textColor="@color/secondaryColor"
                    android:lines="2"

                    android:text="Basket"
                    />
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>