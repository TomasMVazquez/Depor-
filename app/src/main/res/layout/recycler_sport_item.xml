<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:addStatesFromChildren="true"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sport_item3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/secondaryColor"
            app:cardElevation="8dp"
            app:cardCornerRadius="150dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            >

            <ImageView
                android:id="@+id/sport_img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:contentDescription="@string/content_description_sport_item"
                app:tint="@color/secondaryTextColor"
                tools:src="@drawable/ic_basket"
                />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/sport_title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:gravity="top|center"
            android:layout_gravity="bottom"
            android:textColor="@color/secondaryColor"
            android:lines="2"
            android:clickable="true"
            android:focusable="true"
            tools:text="Basket"
            />
    </LinearLayout>
</layout>