<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sport"
            type="com.applications.toms.depormas.data.model.Sport" />
        <variable
            name="clickListener"
            type="com.applications.toms.depormas.ui.adapters.SportListener" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="4dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> clickListener.onClick(sport)}"
        android:background="?android:attr/selectableItemBackground"
        android:addStatesFromChildren="true"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sport_item"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:backgroundTint="@{sport.choosen ? @color/accentColor : @color/secondaryColor}"
            app:cardElevation="8dp"
            app:cardCornerRadius="150dp"
            android:layout_margin="8dp"
            >

            <ImageView
                android:id="@+id/sport_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:contentDescription="@string/content_description_sport_item"
                app:tint="@color/secondaryTextColor"
                tools:src="@drawable/ic_basket"
                />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/sport_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:gravity="top|center"
            android:layout_gravity="bottom|center"
            android:textAlignment="center"
            android:textColor="@color/secondaryColor"
            android:lines="2"
            tools:text="Badminton\nlines"
            />
    </LinearLayout>
</layout>