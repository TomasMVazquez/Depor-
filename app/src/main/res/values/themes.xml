<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeporMas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDayColor</item>
        <item name="colorPrimaryVariant">@color/primaryDayDarkColor</item>
        <item name="colorOnPrimary">@color/primaryDayTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDayColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDayDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryDayTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        //Action Bar Transparent
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="windowActionBarOverlay">true</item>

    </style>

    //Transparent Action Bar
    <style name="ThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        //Hide Action Bar Title
        <item name="android:displayOptions">showHome</item>
        <item name="displayOptions">showHome</item>
        //Transparent Bkg
        <item name="android:background">@null</item>
        <item name="background">@null</item>
    </style>

    //Style for bottom Navigation
    <style name="CustomThemeBottomNav" parent="">
        <item name="cbn_bg">@color/secondaryDayLightColor</item>
        <item name="cbn_fabBg">@color/primaryDayDarkColor</item>
        <item name="cbn_selectedColor">@color/primaryDayColor</item>
        <item name="cbn_unSelectedColor">@color/secondaryDayDarkColor</item>
    </style>



</resources>