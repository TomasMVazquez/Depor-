<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeporMas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!--FONT FAMILy-->
        <item name="fontFamily">@font/cherry_cream_soda</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        //Action Bar Transparent
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:actionBarTheme">@style/ThemeActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="actionBarTheme">@style/ThemeActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    //Transparent Action Bar
    <style name="ThemeActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        //Hide Action Bar Title
        <item name="android:displayOptions">showHome</item>
        <item name="displayOptions">showHome</item>
        //Transparent Bkg
        <item name="android:background">@null</item>
        <item name="background">@null</item>
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/secondaryColor</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">?colorControlNormal</item>
    </style>

    //Style for bottom Navigation
    <style name="CustomThemeBottomNav" parent="">
        <item name="cbn_bg">@color/secondaryLightColor</item> // bkg Bottom nav
        <item name="cbn_fabBg">@color/primaryLightColor</item> // bkg Fab
        <item name="cbn_selectedColor">@color/secondaryLightColor</item> // bkg Icons
        <item name="cbn_unSelectedColor">@color/primaryLightColor</item>
    </style>

</resources>